{
  "name": "common-components",
  "author": "563 EWS - Wavelength",
  "license": "MIT",
  "version": "0.0.0",
  "description": "Common component library used by Wavelength developers",
  "type": "module",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/packages/*",
      "apps/testbed"
    ]
  },
  "files": [
    "./apps/packages/web-components/dist",
    "./apps/packages/react-components/dist",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "dev": "cd apps/testbed && npm run dev",
    "compile": "tsc",
    "clean": "rm -rf apps/packages/react-components/dist apps/testbed/dist",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test": "npm run test:web && npm run test:react",
    "test:react": "cd apps/packages/react-components && jest --runInBand --coverage",
    "test:web": "cd apps/packages/web-components && jest --runInBand --coverage",
    "test:cypress": "cd apps/testbed && cypress run --browser electron --component",
    "watch:web": "cd apps/packages/web-components && npm run watch",
    "watch:react": "cd apps/packages/react-components && npm run watch",
    "watch": "concurrently -k \"npm run watch:web\" \"npm run watch:react\"",
    "build": "npm run clean && npm run build:packages && npm run build:testbed",
    "build:react": "cd apps/packages/react-components && npm run build",
    "build:web": "cd apps/packages/web-components && npm run build",
    "build:packages": "npm run build:web && npm run build:react",
    "build:testbed": "cd apps/testbed && npm run build",
    "publish": "npm publish",
    "storybook": "cd apps/testbed && npm run storybook"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.wavelengthusaf.com/common-components/common-components"
  },
  "keywords": [
    "usaf",
    "components"
  ],
  "directories": {
    "test": "jest"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.25.7",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.0",
    "@types/jest": "^29.5.14",
    "@types/prismjs": "^1.26.4",
    "@types/react": "^18.3.10",
    "@types/react-copy-to-clipboard": "^5.0.7",
    "@types/react-dom": "^18.3.0",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.3.3",
    "babel-plugin-prismjs": "^2.1.0",
    "concurrently": "^9.1.2",
    "css-loader": "^7.1.2",
    "eslint": "^8.57.1",
    "eslint-config-love": "^64.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "file-loader": "^6.2.0",
    "globals": "^15.11.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "nodemon": "^3.1.7",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.1",
    "vite": "^5.4.9"
  },
  "dependencies": {
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.16.5",
    "@mui/material": "^5.15.7",
    "@storybook/manager-api": "^8.6.14",
    "@testing-library/jest-dom": "^6.6.3",
    "react": "^18.2.0",
    "react-confetti-explosion": "^2.1.2",
    "react-copy-to-clipboard": "^5.1.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.26.2",
    "react-syntax-highlighter": "^15.5.0",
    "styled-components": "^6.1.12",
    "typescript": "^5.5.2",
    "zod": "^4.0.17"
  }
}
